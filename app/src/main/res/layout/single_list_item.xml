<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    android:layout_marginBottom="20dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dateEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="1dp"
            android:alpha="0.7"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:background="@drawable/shapebanner"/>
        <TextView
            android:id="@+id/txt_eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/itemCateTime"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:alpha="1"
            android:text=""
            android:maxLines="2"
            android:textSize="20sp"
            android:focusable="true" />
        <LinearLayout
            android:id="@+id/itemCateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/txt_price">
            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:drawableLeft="@mipmap/icons_qrcode"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:alpha="1"
                android:text=""
                android:maxLines="1" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:drawableLeft="@drawable/ic_access_time_white_24dp"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                android:alpha="1"
                android:text=""
                android:maxLines="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_address"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/icons_2pricing"
            android:drawablePadding="5dp"
            android:textColor="@color/white"
            android:alpha="1"
            android:text=""
            android:maxLines="1"/>

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/icons_2address"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:maxLines="1"
            android:alpha="1"
            android:text=""
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>
